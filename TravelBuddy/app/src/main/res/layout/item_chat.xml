<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="Wed, 1 Apr 2023"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:id="@+id/cv_sent"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="18dp"
        app:cardBackgroundColor="#FFF176"
        app:cardPreventCornerOverlap="true">

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tv_sent"
               android:layout_margin="7dp"
               android:textColor="@color/black"
               android:textSize="20sp"
               android:text="This is a sent message."/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tv_sent_time"
               android:layout_marginBottom="6dp"
               android:layout_marginHorizontal="6dp"
               android:textColor="#545454"
               android:text="11:24"
               android:layout_gravity="end"/>

       </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cv_received"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="18dp"
        app:cardBackgroundColor="@color/purple_700"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_received"
                android:layout_margin="7dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="This is a received message."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_received_time"
                android:layout_marginBottom="6dp"
                android:layout_marginHorizontal="6dp"
                android:textColor="#CCCCCC"
                android:text="11:45"
                android:layout_gravity="end"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>