<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    android:layout_marginHorizontal="14dp"
    android:layout_marginVertical="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:id="@+id/image"
            android:src="@drawable/trip_1"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/destination"
            android:layout_marginHorizontal="12sp"
            android:layout_marginTop="18sp"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:text="Beyond Limits"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/route"
            android:layout_marginHorizontal="12sp"
            android:layout_marginTop="6sp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="Mumbai - Antarctica - RIP"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:layout_marginHorizontal="12sp"
            android:layout_marginTop="18sp"
            android:textSize="16sp"
            android:text="Nestled in the mountains of Himachal Pradesh, Manali is a picturesque hill station that is renowned ..."/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/person_4"
                app:cardCornerRadius="18sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/person_4"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/person_3"
                android:layout_toEndOf="@id/person_4"
                android:layout_marginStart="-8dp" 
                app:cardCornerRadius="18sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/person_3"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/person_2"
                android:layout_toEndOf="@id/person_3"
                android:layout_marginStart="-8dp" 
                app:cardCornerRadius="18sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/person_2"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/person_1"
                android:layout_toEndOf="@id/person_2"
                android:layout_marginStart="-8dp" 
                app:cardCornerRadius="18sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/person_1"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/person_1"
                android:layout_marginStart="6dp"
                android:text="+420 more"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cost"
                android:layout_marginStart="12sp"
                android:layout_marginTop="18sp"
                android:textSize="22sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:text="₹15000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18sp"
                android:textSize="22sp"
                android:text="/person"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:layout_marginStart="12sp"
            android:layout_marginTop="18sp"
            android:layout_marginBottom="12dp"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:text="1-3 May 2023"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>